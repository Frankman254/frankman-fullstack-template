{
	"name": "frankman-task-fast",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"workspaces": [
		"apps/*"
	],
	"scripts": {
		"postinstall": "node scripts/postinstall.js",
		"dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
		"dev:web": "cd apps/web && npm run dev",
		"dev:api": "cd apps/api && npm run dev",
		"build": "npm run build --workspaces --if-present",
		"build:web": "cd apps/web && npm run build",
		"build:api": "cd apps/api && npm run build",
		"lint": "npm run lint --workspaces --if-present",
		"lint:fix": "npm run lint:fix --workspaces --if-present",
		"lint:web": "cd apps/web && npm run lint",
		"lint:api": "cd apps/api && npm run lint",
		"format": "npm run format --workspaces --if-present",
		"format:check": "npm run format:check --workspaces --if-present",
		"format:web": "cd apps/web && npm run format",
		"format:api": "cd apps/api && npm run format",
		"clean": "npm run clean --workspaces --if-present",
		"clean:web": "cd apps/web && npm run clean",
		"clean:api": "cd apps/api && npm run clean",
		"type-check": "npm run type-check --workspaces --if-present",
		"type-check:web": "cd apps/web && npm run type-check",
		"type-check:api": "cd apps/api && npm run type-check",
		"db:schema": "cd apps/api && npm run db:schema",
		"setup": "node scripts/setup.js"
	},
	"devDependencies": {
		"baseline-browser-mapping": "^2.9.19",
		"concurrently": "^9.1.2",
		"typescript": "~5.8.3"
	}
}
